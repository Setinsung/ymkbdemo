{
  "UseInMemoryDatabase": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "DBProvider": "sqlite",
    "ConnectionString": "Data Source=YmKB.db"
  },
  "JwtSettings": {
    "Key": "SECRET_JWT_KEY_HERE!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!",
    "Issuer": "YmKB.API",
    "Audience": "YmKB.UI",
    "DurationInMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Properties": {
      "Application": "BlazorPWA",
      "Environment": "Development",
      "TargetFramework": "net9"
    }
  }
}
