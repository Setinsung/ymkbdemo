@using MudBlazor.Extensions.Attribute
@code {
    [Parameter, SafeCategory("Data")] public IList<UploadableFile> UploadRequests { get; set; } = [];
    
    private readonly string[] _mimeTypes =
    {
        "application/zip*",
        "application/x-zip*",
        "application/x-compressed",
        "application/x-rar-compressed",
        "audio/*",
        "application/pdf",
        "application/xml",
        "text/markdown",
        "application/msword",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.*",
        "image/*",
        "text/*"
    };
}

<MudExUploadEdit
    AllowAudioRecording="true"
    AllowVideoCapture="true"
    AllowExternalUrl="false"
    AutoExtractArchive="true"
    MinHeight="250"
    UploadRequestsChanged="@(e => UploadRequests = e)"
    DropZoneClickAction="DropZoneClickAction.UploadFile"
    MimeTypes="@_mimeTypes" bind-UploadRequests="UploadRequests" T="UploadableFile" Style="max-height: 600px; width: 100%">
</MudExUploadEdit>

<MudButton Color="Color.Primary">上传</MudButton>
