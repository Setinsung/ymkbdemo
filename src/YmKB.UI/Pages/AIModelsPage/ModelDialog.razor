@using YmKB.UI.Models
@inject IAIModelService AIModelService

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="_model.ModelDescription" Label="模型描述" Required="true" />
            <MudSelect @bind-Value="_model.AIModelType" Label="模型类型" Required="true" Class="mt-3">
                <MudSelectItem Value="@AIModelType.Chat">会话模型</MudSelectItem>
                <MudSelectItem Value="@AIModelType.Embedding">向量模型</MudSelectItem>
            </MudSelect>
            <MudTextField @bind-Value="_model.Endpoint" Label="请求地址" Required="true" Class="mt-3" />
            <MudTextField @bind-Value="_model.ModelName" Label="模型名称" Required="true" Class="mt-3" />
            <MudTextField @bind-Value="_model.ModelKey" Label="模型密钥" Required="true" Class="mt-3" InputType="InputType.Password" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="!_isValid">确定</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public AIModel? Model { get; set; }

    private MudForm _form;
    private bool _isValid;
    private AIModel _model = new();

    protected override void OnInitialized()
    {
        if (Model != null)
        {
            _model = new AIModel
            {
                Id = Model.Id,
                ModelDescription = Model.ModelDescription,
                AIModelType = Model.AIModelType,
                Endpoint = Model.Endpoint,
                ModelName = Model.ModelName,
                ModelKey = Model.ModelKey
            };
        }
    }

