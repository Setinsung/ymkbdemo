@using YmKB.UI.Models
@code {
    [Parameter] public string Class { get; set; }
    [EditorRequired][Parameter] public UserModel User { get; set; }
}

<MudMenu AnchorOrigin="Origin.BottomRight"
         Class="@Class"
         LockScroll="true"
         TransformOrigin="Origin.TopRight">
    <ActivatorContent>
        <MudAvatar Color="Color.Primary">@(char.ToUpper(@User.DisplayName[0]))</MudAvatar>
    </ActivatorContent>
    <ChildContent>
        <div class="py-4"
             style="min-width: 220px">
            <MudText Class="px-6 pb-2"
                     Typo="Typo.body2">
                <b>@User.DisplayName</b>
            </MudText>
            <MudText Class="px-6 pb-2"
                     Typo="Typo.body2">
                @User.Email
            </MudText>
            <MudText Class="px-6 pb-2"
                     Typo="Typo.caption">
                @User.Role
            </MudText>
            <MudDivider Class="my-2" />
            <MudMenuItem>
                <div class="d-flex">
                    <MudIcon Class="mx-2"
                             Icon="@Icons.Material.Filled.Person" />
                    <MudText>个人</MudText>
                </div>
            </MudMenuItem>
            <MudMenuItem>
                <div class="d-flex">
                    <MudIcon Class="mx-2"
                             Icon="@Icons.Material.Filled.Settings" />
                    <MudText>设置</MudText>
                </div>
            </MudMenuItem>
            <div class="mt-4 mx-4">
                <MudButton Color="Color.Default"
                           FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Logout"
                           Variant="Variant.Outlined">
                    登出
                </MudButton>
            </div>
        </div>
    </ChildContent>
</MudMenu>